<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <FrameLayout
            android:id="@+id/top_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginBottom="40dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/username"
                android:drawablePadding="10dp"
                android:hint="Enter new username."
                android:id="@+id/updateUsername"
                android:inputType="text"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/email"
                android:drawablePadding="10dp"
                android:hint="Enter new email."
                android:id="@+id/updateEmail"
                android:layout_marginBottom="10dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/password"
                android:drawablePadding="10dp"
                android:hint="Enter new password."
                android:id="@+id/updatePassword"
                android:inputType="textPassword"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:drawableStart="@drawable/gender"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/updateGenderGroup"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/updateGenderMale"
                    android:layout_marginEnd="10dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/updateGenderFemale"
                    android:layout_marginEnd="10dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:id="@+id/updateGenderOther" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/location"
                android:drawablePadding="10dp"
                android:text="Location"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/district"
                    android:drawablePadding="10dp"
                    android:text="District \n\t\tCurrent: "
                    android:textStyle="italic"
                    android:id="@+id/currentDistrictText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/updateDistrictList"
                    android:nestedScrollingEnabled="true"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/city"
                    android:drawablePadding="10dp"
                    android:text="City \n\t\tCurrent: "
                    android:textStyle="italic"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" 
                    android:id="@+id/currentCityText"/>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/updateCityList"
                    android:nestedScrollingEnabled="true"/>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/updateStreet"
                android:hint="Enter new street"
                android:drawableStart="@drawable/street"
                android:drawablePadding="10dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="30dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/updateBuilding"
                android:hint="Enter new building name"
                android:drawableStart="@drawable/building"
                android:drawablePadding="10dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="30dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:text="Date of Birth"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginTop="30dp"
                app:drawableStartCompat="@drawable/date_of_birth" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/updateDateOfBirth"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:layout_marginStart="60dp"/>
        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Save"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/updateButton"
            android:layout_margin="20dp"/>

    </LinearLayout>
</ScrollView>
